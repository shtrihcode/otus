root@iliaotus:~# uname -r
5.4.0-153-generic

root@iliaotus:~# wget https://raw.githubusercontent.com/pimlie/ubuntu-mainline-kernel.sh/master/ubuntu-mainline-kernel.sh

root@iliaotus:~# chmod +x ubuntu-mainline-kernel.sh

root@iliaotus:~# sudo mv ubuntu-mainline-kernel.sh /usr/local/bin/

root@iliaotus:~# ubuntu-mainline-kernel.sh -c
Finding latest version available on kernel.ubuntu.com: v6.4.0
Finding latest installed version: none
A newer kernel version (v6.4.0) is available

root@iliaotus:~# sudo ubuntu-mainline-kernel.sh -i v6.4.0

root@iliaotus:~# sudo ubuntu-mainline-kernel.sh -l
v6.4.0-060400

root@iliaotus:~# reboot

root@iliaotus:~# uname -r
6.4.0-060400-generic
